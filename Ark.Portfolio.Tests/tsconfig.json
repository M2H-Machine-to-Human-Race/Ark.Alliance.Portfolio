{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": false,
        "sourceMap": true,
        "moduleResolution": "node",
        "types": [
            "jest",
            "node",
            "react",
            "react-dom",
            "vite/client"
        ],
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@ui/*": [
                "../Ark.Portfolio.UI/src/*"
            ],
            "@ark/portfolio-share/*": [
                "../Ark.Portfolio.Share/*"
            ],
            "@ark/portfolio-share": [
                "../Ark.Portfolio.Share/index.ts"
            ]
        }
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}